{
    "place": {
        "dynamic": "false",
        "_source" : {
            "excludes" : ["context.*", "name.int", "name.old", "name.loc", "name.alt"]
        },
        "_all": {
            "enabled": false
        },
        "_id": {
            "path": "id"
        },
        "properties": {
            "osm_id": {"type": "long"},
            "osm_type": {"type": "string","index": "no"},
            "kmt_id": {"type": "long"},
            "category": {"type": "integer", "index": "no"},
            "importance": {"type": "float"},
            "coordinate": {"type": "geo_point"},


            "name": {
                "properties": {
	                "de":      {"type": "string", "index": "no", "copy_to": "collector_1.de"},
					"default": {"type": "string", "index": "no", "copy_to": "collector_1.default"},
					"en":      {"type": "string", "index": "no", "copy_to": "collector_1.en"},
                    "int":     {"type": "string", "index": "no", "copy_to": "collector_1.default"},
                    "old":     {"type": "string", "index": "no", "copy_to": "collector_1.default"},
                    "loc":     {"type": "string", "index": "no", "copy_to": "collector_1.default"},
                    "alt":     {"type": "string", "index": "no", "copy_to": "collector_1.default"}
                }
            },


            "street": {
                "properties": {
					"default": {"type": "string", "index": "no", "copy_to": "collector_2.default" }
                }
            },
			"city": {
				"properties": {
					"de":      {"type": "string", "index": "no", "copy_to": "collector_2.de"},
					"default": {"type": "string", "index": "no", "copy_to": "collector_2.default"},
					"en":      {"type": "string", "index": "no", "copy_to": "collector_2.en"}
				}
			},
			"housenumber":     {"type": "string", "index": "no", "copy_to": "collector_2.default"},


			"country": {
				"properties": {
					"de":      {"type": "string", "index": "no", "copy_to": "collector_3.de"},
					"default": {"type": "string", "index": "no", "copy_to": "collector_3.default"},
					"en":      {"type": "string", "index": "no", "copy_to": "collector_3.en"}
				}
			},
			"context": {
				"properties": {
					"de":      {"type": "string", "index": "no", "copy_to": "collector_3.de"},
					"default": {"type": "string", "index": "no", "copy_to": "collector_3.default"},
					"en":      {"type": "string", "index": "no", "copy_to": "collector_3.en"}
				}
			},
			"postcode":     {"type": "string", "index": "no", "copy_to": "collector_3.default"},


            "collector_1": {
				"type": "object",
				"properties": {
					"de": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"default": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"en": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					}
				}
            },
            "collector_2": {
				"type": "object",
				"properties": {
					"de": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"default": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"en": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					}
				}
            },
            "collector_3": {
				"type": "object",
				"properties": {
					"de": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"default": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					},
					"en": {
						"type": "string",
						"analyzer": "index_ngram",
						"fields": {"raw": {"type": "string", "analyzer": "index"}}
					}
				}
            }
        }
    }
}
